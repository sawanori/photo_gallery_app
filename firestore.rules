rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isRegisteredUser() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function hasValidSession() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/sessions/$(request.auth.uid));
    }

    function onlyLikeCountChanged() {
      let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
      return affectedKeys.size() == 0 || affectedKeys.hasOnly(['likeCount']);
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Projects collection
    match /projects/{projectId} {
      allow read, create, update, delete: if isAdmin();
    }

    // Images collection
    match /images/{imageId} {
      allow read: if isRegisteredUser() || isAdmin() || hasValidSession();
      allow create: if isRegisteredUser() &&
        request.resource.data.projectId is string &&
        request.resource.data.projectId.size() > 0;
      allow update: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin() ||
         (onlyLikeCountChanged() && (isRegisteredUser() || hasValidSession())));
      allow delete: if resource.data.userId == request.auth.uid || isAdmin();
    }

    // Likes collection
    match /likes/{likeId} {
      allow read: if isRegisteredUser() || isAdmin() || hasValidSession();
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Invitations collection
    match /invitations/{invitationId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() &&
        request.resource.data.projectId is string &&
        request.resource.data.projectId.size() > 0;
      allow update, delete: if isAdmin();
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if isAdmin() || (isAuthenticated() && request.auth.uid == sessionId);
      allow create: if isAuthenticated() && request.auth.uid == sessionId;
      allow update: if isAuthenticated() && request.auth.uid == sessionId &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastAccessedAt']);
      allow delete: if isAdmin();
    }
  }
}
